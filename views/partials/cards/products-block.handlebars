<div class="product-card">
    <img src="{{picture}}" class="card-img-top thumbnail" alt="...">
    <div class="product-card card-body">
        <h5 class="card-title">{{name}}</h5>
        <div class="productPrice">
            <p>Price: ${{price}}</p>
        </div>
        <p class="card-text">{{description}}</p>
        <a href="/api/sellers/id/{{id}}" class="btn btn-primary">Contact Seller</a>
    </div>
</div>