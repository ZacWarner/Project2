    <!--Info Card-->
<div class="card mx-5 product-card" style="">
    <div class="card-body product-card">
        <h5 class="card-title" id="sellername" data-sellerid={{sellerId}}></h5>
        <div class="card-text">
            <div class="row">
                <div class="col-md-6">
                    <p id="sellerPh">Phone: </p>
                    <p id="sellerEmail">Email: </p>
                </div>
                <div class="col-md-6">
                    <p id="sellerLoc">Location: </p>
                    <button class="btn btn-info m-0">Update</button>
                </div>
            </div>
        </div>
    </div>
</div><br>


<div id="review-div" class="m-5">
    <div class="row">
        <div class="col-10">
            <h2 style="color:darkturquoise">Reviews</h2>
        </div>
    </div>
    <hr>

</div>

<!--Add New Product-->

<div class="jumbotron">
  <h1 class="display-4">New Product</h1>
  <form>
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="inputEmail4">Product Name</label>
      <input type="email" class="form-control" id="inputEmail4" placeholder="Product Name">
    </div>
    <div class="form-group col-md-6">
      <label for="inputPassword4">Description</label>
      <input type="text" class="form-control" id="inputPassword4" placeholder="Brief Description">
    </div>
  </div>
  <div class="form-row">
  <div class="form-group col-md-4">
    <label for="inputAddress">Price</label>
    <input type="text" class="form-control" id="inputAddress" placeholder="$0.00">
  </div>
  <div class="form-group col-md-2">
    <label for="inputState">Category</label>
      <select id="inputState" class="form-control">
        <option selected>Choose...</option>
        <option>Books</option>
       <option>Electronics</option>
       <option>Food</option>
       <option>Supplies</option>
      </select>
  </div>
  </div>


  <div class="form-row">
    <div class="form-group col-md-6">
      
    </div>
    
    <div class="form-group col-md-2">
      
    </div>
  </div>
  <div class="form-group">
    <div class="form-check">
      
    </div>
  </div>
  
</form>
  <hr class="my-4">
  <a class="btn btn-info btn-lg" href="#" role="button">Add</a>
</div>

<!-- list of seller's products -->
    <div id="products" class="offset">

        <div class="col-12 jumbotron">
            <div class="col-12 text-center">
                <h2 class="page-headers">Products</h2>
            </div>

            {{#each hbsObj.products}}
            {{> cards/products-block}}
            {{/each}}

        </div>
    </div>

</div>